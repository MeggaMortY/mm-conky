conky.config = {
    alignment = 'top_right',
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
	default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'DejaVu Sans Mono:size=12',
    gap_x = 5,
    gap_y = 60,
    minimum_height = 5,
	minimum_width = 5,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'desktop',
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false,

    own_window_transparent = no,
    own_window_colour = '2C001E'
}

conky.text = [[
# ${scroll 16 $nodename - $sysname $kernel on $machine | }
# $hr
${color grey}Uptime:$color $uptime
${color grey}CPU Usage: ${color white}$cpu% ${alignr}${color grey}CPU Temp: ${color white}${hwmon 0 temp 1}°C
${color grey}GPU Usage: ${color white}${nvidia gpuutil}% ${alignr}${color grey}GPU Temp: ${color white}${nvidia temp}°C
${color grey}GPU RAM: ${color white} ${nvidia memperc}%
${color grey}RAM Usage:$color $mem - $memperc% ${membar 4}
${color grey}Swap Usage:$color $swap - $swapperc% ${swapbar 4}
$hr
${color green}${voffset 5}AMD Ryzen 2700X 3.7Ghz:@ ${freq} MHz
${color grey}CPU Cores:
${color grey}CPU 0  ${color green}${cpu cpu1}% ${color white}${cpubar cpu1 18}
${color grey}CPU 1  ${color green}${cpu cpu2}% ${color white}${cpubar cpu2 18}
${color grey}CPU 2  ${color green}${cpu cpu3}% ${color white}${cpubar cpu3 18}
${color grey}CPU 3  ${color green}${cpu cpu4}% ${color white}${cpubar cpu4 18}
${color grey}CPU 4  ${color green}${cpu cpu5}% ${color white}${cpubar cpu5 18}
${color grey}CPU 5  ${color green}${cpu cpu6}% ${color white}${cpubar cpu6 18}
${color grey}CPU 6  ${color green}${cpu cpu7}% ${color white}${cpubar cpu7 18}
${color grey}CPU 7  ${color green}${cpu cpu8}% ${color white}${cpubar cpu8 18}
${color grey}CPU 8  ${color green}${cpu cpu9}% ${color white}${cpubar cpu9 18}
${color grey}CPU 9  ${color green}${cpu cpu10}% ${color white}${cpubar cpu10 18}
${color grey}CPU 10 ${color green}${cpu cpu11}% ${color white}${cpubar cpu11 18}
${color grey}CPU 11 ${color green}${cpu cpu12}% ${color white}${cpubar cpu12 18}
${color grey}CPU 12 ${color green}${cpu cpu13}% ${color white}${cpubar cpu13 18}
${color grey}CPU 13 ${color green}${cpu cpu14}% ${color white}${cpubar cpu14 18}
${color grey}CPU 14 ${color green}${cpu cpu15}% ${color white}${cpubar cpu15 18}
${color grey}CPU 15 ${color green}${cpu cpu16}% ${color white}${cpubar cpu16 18}
$hr
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
$hr
${color grey}Name              PID   CPU%   MEM%
${color lightgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
$hr
${color grey}File systems:
"/":$color${fs_used /}/${fs_size /} ${fs_bar 6 /}
# ${color grey}Networking:
# Up:$color ${upspeedf wlan0} ${color grey} - Down:$color ${downspeedf}
]]
